# PostgreSQL Database Configuration
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_db_name
DATABASE_URL=postgresql://your_postgres_user:your_postgres_password@db:5432/your_postgres_db_name

# Redis Configuration
REDIS_URL=redis://redis:6379

# SMTP Email Configuration
SMTP_HOST=your_smtp_host # e.g., smtp.gmail.com
SMTP_PORT=your_smtp_port # e.g., 587 or 465 for SSL
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=your_sender_email

# Application Security
SECRET_KEY=a_long_random_secret_key_for_jwt_and_other_security

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Test Settings
QUESTION_TIME_LIMIT_SECONDS=120
MAX_BLUR_WARNINGS=2
TOTAL_QUESTIONS_PER_TEST=20

# Frontend Settings
CORS_ORIGINS=["http://localhost:3000"] # Comma-separated list of allowed origins

# Debugging
DEBUG=true # Set to true for development, false for production

# Question Image Directory
QUESTION_IMAGE_DIR=/app/question_images # Path inside the Docker container
